{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"]
  },
  "vueCompilerOptions": {
    "strictTemplates": true
  },
  "include": ["src"],
  "exclude": ["dist", "**/node_modules"]
}
